# i3status configuration file.
# see "man i3status" for documentation.
# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors		=	true
	interval 	=	5
	color_good 	=	"#00D863"
	color_bad 	=	"#6A748E"
	color_degraded 	=	"#DC322F"
	color_separator	=	"#F2ECFF"
}

order	+=	"cpu_usage"
#order	+=	"cpu_temperature 0"
#order	+=	"ipv6"
order	+=	"wireless _first_"
order	+=	"ethernet _first_"
#order	+=	"run_watch DHCP"
#order	+=	"run_watch VPNC"
#order	+=	"path_exists VPN"
order	+=	"battery all"
order	+=	"load"
order	+=	"disk /"
#order	+=	"disk /home"
order	+=	"memory"
order	+=	"volume master"
order	+=	"tztime local"

cpu_usage {
#	format = "CPU: %usage CPU_0: %cpu0 CPU_1: %cpu1"
	format = "CPU: %usage"
#	max_threshold = "90"
#	format_above_threshold = "Warning above threshold: %usage"
	degraded_threshold = "70"
#	format_above_degraded_threshold = "Warning above degraded threshold: %usage"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
#	format_above_threshold = "Warning T above threshold: %degrees °C"
#	max_threshold = "70"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

wireless _first_ {
	format_up = "W: (%quality at %essid, %bitrate) %ip"
#	format_up = "W: (%quality at %essid, %bitrate / %frequency) %ip"
#	format_up = "%03d%s"
	format_down = "W: down"
}

ethernet _first_ {
#	format_up = "E: %ip (%speed)"
	format_up = "E: %ip"
	format_down = "E: down"
}

run_watch DHCP {
#	format: %title: %status
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

battery all {
	format = "%status %percentage %remaining %emptytime"
	format_down = "No battery"
	last_full_capacity = true
	integer_battery_capacity = true
	status_chr = "⚡ CHR"
	status_bat = "🔋 BAT"
	status_unk = "? UNK"
	status_full = "☻ FULL"
	low_threshold = 10
	threshold_type = time
	path = "/sys/class/power_supply/BAT%d/uevent"
}

load {
	format = "load %1min"
	max_threshold = "0.1"
}

disk "/" {
#	format = "⛁ %avail"
#	format = "⛁ %free (%avail)/ %total"
#	format = "⛁ %percentage_used used, %percentage_free free, %percentage_avail avail"
#	format = "⛁ %avail (%percentage_avail) Avail"
	format = "⛁ %avail (%percentage_avail)"
	prefix_type = custom
	low_threshold = "10"
	format_below_threshold = "Warning: %percentage_avail"
	threshold_type = percentage_free
	align = "left"
	min_width = 100
	separator = false
	separator_block_width = 1
}

disk "/home" {
#	format = "⛁ %avail"
#	format = "⛁ %free (%avail)/ %total"
#	format = "⛁ %percentage_used used, %percentage_free free, %percentage_avail avail"
#	format = "⛁ %avail (%percentage_avail) Avail"
	format = "⛁ %avail (%percentage_avail)"
	prefix_type = custom
	low_threshold = "10"
	format_below_threshold = "Warning: %percentage_avail"
	threshold_type = percentage_free
	align = "left"
	min_width = 100
	separator = false
	separator_block_width = 1
}

memory {
	format = "%available"
#	format = "%free %available (%used) / %total"
	threshold_degraded = "10%"
	threshold_critical = "5%"
	format_degraded = "LOW: %free"
}

volume master {
	format = "♪: %volume"
#	format = "♪ (%devicename): %volume"
	format_muted = "♪: muted (%volume)"
	device = "default"
#	device = "pulse:alsa_output.pci-0000_00_14.2.analog-stereo"
#	device = "pulse:1"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
#	format = "%Y-%m-%d %H:%M:%S"
	format = "%Y-%m-%d %H:%M"
}
